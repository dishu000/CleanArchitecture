@model CleanArch.Application.ViewModels.CourseViewModel

<div class="container body-content">
	<div class="row course-content">
		@foreach(var courses in Model.Courses )
		{
			<div class="course-image-container">
				<div class="course-image" style="background-image : url(@courses.ImageUrl)"></div>
					
			</div>

			<span>@courses.Name</span>
			<img style="background-image:src('@courses.ImageUrl')">
		}
	</div>
</div>